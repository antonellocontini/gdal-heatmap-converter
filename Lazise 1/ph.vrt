<OGRVRTDataSource>
    <OGRVRTLayer name="ph">
        <SrcDataSource>ph.csv</SrcDataSource>
        <GeometryType>wkbPoint</GeometryType>
        <LayerSRS>WGS84</LayerSRS>
        <GeometryField encoding="PointFromColumns" x="longitude" y="latitude"/>
        <Field name="value" type="Real" />
    </OGRVRTLayer>
</OGRVRTDataSource>
